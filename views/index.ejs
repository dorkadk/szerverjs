<%-include('header')-%>
<h1>Kerékpárok</h1>
<div class="container">

    <table class="table table-striped">
        <thead>
        <tr>

            <th scope="col">Típus</th>
            <th scope="col">Szín</th>
            <th scope="col">Tulajdonos</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <tbody>
        <% locals.kerekparok.forEach(function(egyKerekpar){%>
            <tr>
                <td> <%= egyKerekpar.tipus%></td>
                <td> <%= egyKerekpar.szin%></td>
                <td style="white-space: nowrap"><a href="/szemely/list/<%= egyKerekpar._tulajdonos%>"><i class="fa-solid fa-person"></i></a></td>
                <td style="white-space: nowrap"><a href="/kerekpar/edit/<%= egyKerekpar._id%>" class="btn btn-primary"><i class="fa-solid fa-pencil"></i></a></td>
                <td style=" white-space: nowrap"> <a><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal<%= egyKerekpar._id %>">
                            <i class="fa-solid fa-trash"></i>
                        </button> </a></td>
            </tr>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal<%= egyKerekpar._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Torles</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Biztosan torli?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Megsem</button>
                            <a href="/kerekpar/del/<%=egyKerekpar._id%>" class="btn btn-danger"><i> Törlés</i></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Button trigger modal -->
        <%});%>

        </tbody>
    </table>
</div>
<%-include('footer')-%>