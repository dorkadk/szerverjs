<%-include('header')-%>
<h1>Kerékpárok</h1>
<div class="container">
    <!-- Content here -->
   <!--- <table>
        <th>Kerékpár ID</th><th>Típus</th><th>Szín</th><th>Tulajdonos</th><th></th>
    </table> -->
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Kerékpár ID</th>
            <th scope="col">Típus</th>
            <th scope="col">Szín</th>
            <th scope="col">Tulajdonos</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <tbody>
        <% locals.kerekparok?.forEach(function(egyKerekpar){%>
            <tr>
                <th scope="row"> <%= egyKerekpar.id %> </th>
                <td> <%= egyKerekpar.tipus%></td>
                <td> <%= egyKerekpar.szin%></td>
                <td> <%= egyKerekpar._tulajdonos.nev%></td>
                <td style="white-space: nowrap"><a href="/views/editkerekpar.ejs" class="btn btn-primary"><i class="fa-solid fa-pencil"></i></a></td>
                <td style=" white-space: nowrap"> <a><button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
                            <i class="fa-solid fa-trash"></i>
                        </button> </a></td>
            </tr>
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Törlés</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Biztosan törli?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégsem</button>
                            <a href="/kerekpar/del/<%=egyKerekpar._id%>" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Törlés</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Button trigger modal -->
        <%});%>

        </tbody>
    </table>
</div>
<%-include('footer')-%>